//RFID
MFRC522 mfrc522(SS_PIN, RST_PIN);

#include <SPI.h>
#include <MFRC522.h>

#define SS_PIN 10
#define RST_PIN 9

MFRC522 mfrc522(SS_PIN, RST_PIN);

void setup() {
	Serial.begin(9600);
	SPI.begin();
	mfrc522.PCD_Init();
	mfrc522.PCD_DumpVersionToSerial();
	Serial.println(F("Examinar PICC para ver UID, SAK, tipo e blocos de dados..."));
}

void loop() {

	if ( ! mfrc522.PICC_IsNewCardPresent()) {
		return;
	}

	
	if ( ! mfrc522.PICC_ReadCardSerial()) {
		return;
	}

	
	mfrc522.PICC_DumpToSerial(&(mfrc522.uid));
}

